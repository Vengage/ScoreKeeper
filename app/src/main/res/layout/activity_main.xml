            android:drawableStart="@mipmap/baseball"
            android:gravity="center"
            android:text="@string/baseball"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_type_baseball"
