<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#673AB7</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#D1C4E9</item>
    </style>

    <!-- GameChanger button style theme. -->
    <style name="GameChangerButton">
        <item name="android:paddingBottom">@dimen/padding_margin_16dp</item>
        <item name="android:paddingTop">@dimen/padding_margin_16dp</item>
        <item name="android:paddingLeft">@dimen/padding_margin_16dp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
